[flake8]
max-line-length = 88
extend-ignore = 
    E203,
    E501,
    W503,
    E402,
    F401,
    C901
exclude = 
    .git,
    __pycache__,
    .venv,
    .eggs,
    *.egg,
    build,
    dist,
    .pytest_cache,
    .mypy_cache,
    .tox,
    .nox,
    htmlcov,
    .coverage,
    coverage.xml,
    venv,
    env,
    migrations,
per-file-ignores =
    __init__.py:F401
    tests/*:S101
    app/config.py:E501
max-complexity = 10
select = C,E,F,W,B,B950
ignore = 
    E203,
    E501,
    W503
