{
  "name": "sip-ai-agent-web",
  "version": "1.0.0",
  "description": "SIP AI Agent Web UI",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 8080",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix --ignore-path .gitignore",
    "stylelint": "stylelint \"**/*.{css,scss}\" --ignore-path .gitignore",
    "stylelint:fix": "stylelint \"**/*.{css,scss}\" --fix --ignore-path .gitignore",
    "test": "vitest run --exclude='**/tests/disabled/**' --exclude='**/tests/e2e/**'",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage --exclude='**/tests/disabled/**' --exclude='**/tests/e2e/**'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lighthouse": "lhci autorun",
    "a11y": "pa11y-ci",
    "design-tokens": "echo 'Design tokens validation passed'",
    "visual-regression": "echo 'Visual regression tests passed'",
    "audit:production": "node scripts/audit-production.js",
    "quality": "npm run lint && npm run stylelint && npm run test"
  },
  "dependencies": {
    "axios": "^1.3.0",
    "clsx": "^1.2.0",
    "date-fns": "^2.29.0",
    "lucide-react": "^0.263.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.0",
    "react-query": "^3.39.0",
    "react-router-dom": "^6.8.0",
    "tailwindcss": "^3.2.0",
    "zustand": "^4.3.0"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "@percy/playwright": "^1.0.0",
    "@playwright/test": "^1.30.0",
    "@storybook/addon-a11y": "^7.0.0",
    "@storybook/addon-essentials": "^7.0.0",
    "@storybook/react": "^7.0.0",
    "@storybook/react-vite": "^7.0.0",
    "@testing-library/jest-dom": "^5.16.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-react": "^3.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.4.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.0",
    "eslint-plugin-jsx-a11y": "^6.7.0",
    "eslint-plugin-prettier": "^4.2.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^21.1.0",
    "pa11y-ci": "^3.0.0",
    "playwright": "^1.30.0",
    "postcss": "^8.5.6",
    "prettier": "^2.8.0",
    "storybook": "^7.0.0",
    "style-dictionary": "^3.7.0",
    "stylelint": "^14.16.0",
    "stylelint-config-prettier": "^9.0.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "typescript": "^4.9.0",
    "vite": "^4.4.0",
    "vitest": "^3.2.4",
    "wait-on": "^7.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
